	@Override
	public List<Pessoa> buscarPessoas() {
		String jpql = "";
			 jpql = "from Pessoa where nome like '%e'";
		
		Query query = super.getQuery(jpql);
		List<Pessoa> pessoas = query.getResultList();
		for (Pessoa pessoa : pessoas) {
			System.out.println(pessoa.getNome());
		}
 		return null;
